{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cmake: configure & build (with Geant4 env)",
      "type": "shell",
      "command": "bash",
      "args": [
        "-lc",
        "source /Users/ParkinPham/Programming/geant4-v11.3.2-install/bin/geant4.sh && cmake -S ./exampleB2 -B exampleB2/build -DCMAKE_BUILD_TYPE=Debug && cmake --build exampleB2/build -- -j && echo 'Build finished.'"
      ],
      "group": { "kind": "build", "isDefault": true },
      "presentation": { "echo": true, "reveal": "always", "panel": "shared" },
      "problemMatcher": []
    },
    {
      "label": "Build & Run Pythia8",
      "type": "shell",
      "command": "/bin/bash",
      "args": [
        "-lc",
        "g++ -o examplePythia examplePythia.cpp $(/Users/parkinpham/Programming/pythia8316/bin/pythia8-config --cxxflags --libs --hepmc3) && ./examplePythia"
      ],
      "options": {
        "cwd": "${workspaceFolder}/examplePythia"
      },
      "problemMatcher": "$gcc",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
